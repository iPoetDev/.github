{
  "scripts": {
    "prettier-watch": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}",
    "test": "standard && node **.js | snazzy",
    "test-fix": "standard --fix && node **.js | snazzy",
    "validate": "html-validator docs/*.html flyer.html --exclude=build,tmp --delay=200",
    "one-folder": "html-validator docs --exclude=build,tmp --delay=200",
    "all": "html-validator --quiet --exclude=build,tmp --delay=200",
    "continue": "html-validator --quiet --continue --exclude=build,tmp --delay=200"
  },
  "devDependencies": {
    "editorconfig": "^2.0.0",
    "eslint": "^8.44.0",
    "eslint-config-defaults": "^9.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-semistandard": "^17.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-import-resolver-node": "^0.3.7",
    "eslint-module-utils": "^2.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-security": "^1.7.1",
    "eslint-scope": "^7.2.0",
    "eslint-utils": "^3.0.0",
    "htmlhint": "^1.1.4",
    "htmx.org": "^1.9.2",
    "postcss": "^8.4.25",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.4.0",
    "standard": "^17.1.0",
    "stylelint": "^15.10.1",
    "stylelint-config-recommended": "^13.0.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "stylelint-csstree-validator": "^3.0.0",
    "w3c-html-validator": "^1.4.0"
  },
  "browserslist": [
    ">0.3%, defaults and supports es6-module",
    "maintained node versions"
  ],
  "dependencies": {
    "autoprefixer": "^10.4.14",
    "browserslist": "^4.21.9",
    "snazzy": "^9.0.0"
  },
  "standard": {
    "ignore": [
      "**/out/",
      "/lib/*",
      "tmp.js"
    ]
  }
}
